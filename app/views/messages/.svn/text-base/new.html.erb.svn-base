<%= form_for @message, :url => messages_path(@user) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :recepient_tokens, "Recepients" %><br />
    <%= f.text_field :recepient_tokens, "data-pre" => @message.recepients.map(&:attributes).to_json %>
  </p>
  <p>
    Message<br />
    <%= f.text_area :body,:style=>"height:90px;width:700px;" %>
  </p>
  <%= render :partial => "attachment"%>
  <br/><br/><br/><br/><br/>
  <%= render :partial =>'files_list' %>
  <br/>
  <%= f.submit "Create",:style=> "margin-top:20px;"%>
<% end %>



